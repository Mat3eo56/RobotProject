#include <VarSpeedServo.h>
VarSpeedServo SERVO1; //servo de la base
VarSpeedServo SERVO2; //servo del antebarazo
VarSpeedServo SERVO3; //servo del brazo
VarSpeedServo SERVO4; //servo base muñeca
VarSpeedServo SERVO5; //servo muñaca
VarSpeedServo SERVO6; //servo pinza
const int tiempo1 = 100;
const int tiempo2 = 20;
const int tiempo3 = 80;

void setup() {
SERVO1.attach(3);
SERVO2.attach(5);
SERVO3.attach(6);
SERVO4.attach(9);
SERVO5.attach(10);

}

void loop() {
SERVO1.write(90,tiempo2,true);
SERVO2.write(90,tiempo2,true);
SERVO3.write(90,tiempo2,true);
SERVO4.write(90,tiempo3,true);
SERVO5.write(90,tiempo3,true);
SERVO6.write(90,tiempo3,true);
delay(10);
////////////////////////////////////////


////////////////////////////////////////
//posicion 1
SERVO1.write(180,tiempo2,true);
delay(tiempo1);
SERVO2.write(60,tiempo2,true);
delay(tiempo1);
SERVO3.write(40,tiempo2,true);
delay(tiempo1);
SERVO4.write(40,tiempo2,true);
delay(tiempo1);
SERVO5.write(50,tiempo2,true);
delay(tiempo1);
////////////////////////////////////
//inicio posicion 2
////////////////////////////////////
}
